    <h1 class="title is-1">{{ entry.title }}</h1>
    <small>{{ entry.ev_date|date('d. M Y') }}</small>

    <br><br>

    <div class="tags">

        {% for topic in entry.topics.all() %}
            <span class="tag is-success">
                {{ topic }}
            </span>
        {% endfor %}

        {% for phaseOfLife in entry.phasesOfLife.all() %}
            <span class="tag is-info">
                {{ phaseOfLife }}
            </span>
        {% endfor %}

        {% for region in entry.regions.all() %}
            <span class="tag is-warning">
                {{ region }}
            </span>
        {% endfor %}

    </div>
    
{% endblock %}
