{% extends 'layout' %}




{% block main %}

    {# Track page view #}
    {{ entry | views_work_image }}

    <a href="javascript:history.back()">Zur√ºck</a>


    <div class="content">
        <h1 class="title is-1">{{ entry.title }}</h1>
        <p>{{ entry.text }}</p>
    </div>

    <div class="tags">

        {% for topic in entry.topics.all() %}
            <span class="tag is-success">
                {{ topic }}
            </span>
        {% endfor %}

        {% for phaseOfLife in entry.phasesOfLife.all() %}
            <span class="tag is-info">
                {{ phaseOfLife }}
            </span>
        {% endfor %}

        {% for region in entry.regions.all() %}
            <span class="tag is-warning">
                {{ region }}
            </span>
        {% endfor %}

    </div>

    <h2>Number of views</h2>
    {% set views = craft.views_work.recording(entry) %}
    <table class="table">
        <tbody>
            <tr>
                <th>Total</th>
                <td>{{ views.total }}</td>
            </tr>
            <tr>
                <th>Month</th>
                <td>{{ views.thisMonth }}</td>
            </tr>
            <tr>
                <th>Week</th>
                <td>{{ views.thisWeek }}</td>
            </tr>
            <tr>
                <th>Today</th>
                <td>{{ views.today }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
